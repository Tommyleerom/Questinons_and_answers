<% provide :page_title, "Question #{@question.id}" %>

<h1 class="mb-4"><%= @question.title %></h1>

<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger',
  data: {method: :delete, confirm: 'Are you sure?'} %>

<hr class="my-3">  <!-- line -->

<h2><%= t '.write_answer' %></h2>

<%= render 'answers/form' %>

<h2 class="mt-5">Answers</h2>

<%== pagynate @pagy %>

<%= render partial: 'answers/answer', collection: @answers, as: :answer, locals: {question: @question} %> <!-- @answers коллекция (вроде массива) и проитерирует каждый элемент в соответсвии с одноименным паршилом answer.html.erb и каждый элемент будет называться answer, локальные переменные будут @question -->

<%== pagynate @pagy %>
