<div class="container">
  <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
      <li><%= link_to 'Home', root_path, class: 'nav-link px-2 text-white' %></li>
      <li><%= link_to 'Questions', questions_path, class: 'nav-link px-2 text-white' %></li>
      <% if user_signed_in? %>
        <li class="dropdown">
          <%=  link_to current_user.name, '#', class: 'nav-link px-2 dropdown-toggle', data: {"bs-toggle": 'dropdown'} %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to 'Edit profile', edit_user_path(current_user),
                class: 'dropdown-item' %>
            </li>

            <li><hr class="dropdown-divider"></li>
            <li>
              <%= link_to 'Log Out', session_path,
                class: 'dropdown-item', data: {method: :delete} %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to 'Sign up', new_user_path, class: 'nav-link px-2' %></li>
        <li><%= link_to 'Log In', new_session_path, class: 'nav-link px-2' %></li>
      <% end %>
    </ul>
  </nav>
</div>
